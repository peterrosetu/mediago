{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2015",
    "lib": ["ES2015"],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["gulpfile.ts", "scripts"]
}
